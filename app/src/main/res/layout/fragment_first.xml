<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".FirstFragment">

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter user name"
         />

    <EditText
        android:id="@+id/edtDomain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter domain"
        />

    <EditText
        android:id="@+id/edtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter message"
        />

    <EditText
        android:id="@+id/edtUserReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter user receive"
        />

    <Button
        android:id="@+id/btnAddFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add friend"
        />

    <Button
        android:id="@+id/btnGetFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get friends"
        />

    <Button
        android:id="@+id/btnSendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Message"
        />

    <Button
        android:id="@+id/btnGetMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Messages in chat room"
        />

    <Button
        android:id="@+id/btnGetUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Users in chat room"
        />

    <Button
        android:id="@+id/btnGeChatRooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Chat Rooms"
        />
</LinearLayout>